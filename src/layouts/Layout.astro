---
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import { ClientRouter } from 'astro:transitions';
const { pageTitle } = Astro.props;

const anim = {
  old: {
    name: 'pop',
    duration: '0.4s',
    easing: 'cubic-bezier(0.65,0,0.35,1)',
    direction: 'reverse',
  },
  new: {
    name: 'pop',
    delay: '0.45s',
    duration: '0.4s',
    easing: 'cubic-bezier(0.65,0,0.35,1)',
  },
};

const customTransition = {
  forwards: anim,
  backwards: anim,
};
---
<html lang="en" class="scroll-smooth" transition:animate={customTransition}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="{themeColour}">
    <title>Tommy Parker â€” {pageTitle}</title>
    <ClientRouter />
  </head>
  <body class="bg-paper dark:bg-ink-950">
    <Navigation/>
      <slot />
    <Footer/>
  </body>
</html>

<script src="https://unpkg.com/masonry-layout@4.2.2/dist/masonry.pkgd.min.js" is:inline></script>

<style is:global>
  @keyframes pop {
    0% {
      opacity: 0;
      transform: translateY(50px);
    }
    
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>