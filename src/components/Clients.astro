<Container>
    <div class="grid gap-6 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6">
        {logos.map((logo) => (
            <img src={logo.src} alt={logo.alt} loading="lazy" class="w-full h-auto"/>
        ))}
    </div>
</Container>