  { src: 'src/assets/clients/TommyParker_Client_Ferrero.svg', alt: 'Ferrero' },
  { src: 'src/assets/clients/TommyParker_Client_GQ.svg', alt: 'GQ' },
  { src: 'src/assets/clients/TommyParker_Client_Guardian.svg', alt: 'Guardian' },
  { src: 'src/assets/clients/TommyParker_Client_Harrys.svg', alt: 'Harrys' },
  { src: 'src/assets/clients/TommyParker_Client_HuffPost.svg', alt: 'HuffPost' },
