<script>
    import { animate, inView } from "motion";

    function init() {
        inView(".porker img", (element) => {
        animate(
            element,
            { opacity: 1, x: [-48, 0] },
            { duration: 0.9, easing: "circInOut" }
        )

        return () => animate(element, { opacity: 1, x: -48 })
    })
    }

    // Initialise on first load
    init()

    // Re-initialise after swapping pages
    document.addEventListener("astro:after-swap", init)
</script>