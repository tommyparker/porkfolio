---
import Layout from '../layouts/Layout.astro';
import Container from '../layouts/Container.astro';
import { Image } from 'astro:assets';
import porker from '../assets/Porker_Coffee.webp';

const pageTitle = "404"
---

<Layout pageTitle={pageTitle} hideNav hideFooter>
    <Container class="flex flex-col items-center justify-between h-svh">
        <div class="flex flex-col items-center justify-center h-full mt-32">
            <h1 class="error-title">Oops!</h1>
            <p class="error-text">I can't find that one.</p>
            <a href="/" class="btn btn-fill hover:px-6">Back to home</a>
        </div>
        <Image src={porker} alt="Porker" class="max-h-32 sm:max-h-48 md:max-h-64 w-auto my-8" />
    </Container>
</Layout>
