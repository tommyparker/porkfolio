---
import Layout from '../layouts/Layout.astro';
import Container from '../layouts/Container.astro';
import Greeting from '../components/Greeting';
import Masonry from '../components/Masonry';
import Project from '../components/Project.astro';

import { getCollection } from 'astro:content';

const projects = await getCollection('projects');

const pageTitle = "Work";

---

<Layout pageTitle={pageTitle}>
	<Container>
		<Greeting client:load messages={["Hey", "Howdy", "Hey there", "Yo", "Hello there", "Why hello"]} />
	</Container>
  <Container class="py-0">
    <Masonry client:only>
      {
        projects.map((project, index) => (
          <Project url={`/projects/${project.slug}/`} title={project.data.title} client={project.data.client} thumbnail={project.data.thumbnail} index={index}/>
        ))
      }
    </Masonry>
  </Container>
</Layout>