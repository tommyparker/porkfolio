---
import Layout from '../layouts/Layout.astro';
import Container from '../layouts/Container.astro';
import Greeting from '../components/Greeting';
import InfoBlock from '../components/InfoBlock.astro';
import Note from '../components/Note.astro';
import Clients from '../components/Clients.astro';
import Mail from '../components/Mail.astro';

import { Image } from 'astro:assets';
import porker from "../assets/Porker.jpg";

const pageTitle = "Info";
---
<Layout pageTitle={pageTitle}>
	<Container class="mt-12 lg:mt-40">
		<Greeting client:load messages={["Hey", "Howdy", "Hey there", "Yo", "Hello there", "Why hello"]} class="mt-auto" />
	</Container>
    <Container>
        <Image src={porker} alt="Porker" class="rounded-xl w-full" loading={'eager'} />
    </Container>
    <Container>
        <InfoBlock header="About" class="border-t-0">
            <p>My work is both character and colour-driven, and whilst graphic, it retains a tactile warmth and quirkiness. I aim to show intimate moments in familiar worlds that have been featured in editorials, book covers, branding and advertising campaigns.</p>
        </InfoBlock>
    </Container>
    <Container>
        <InfoBlock header="Recognition">
            <div class="mytable">
                <Note header="2024">Society of Illustrators 67</Note>
                <Note header="2023">
                    Society of Illustrators 66<br/>
                    DI Cross-category Award: (Shortlisted)<br/>
                    World Illustration Awards: Advertising (Shortlisted)
                </Note>
                <Note header="2022">World Illustration Awards: Advertising (Longlisted)</Note>
                <Note header="2019">World Illustration Awards: Experimental (Shortlisted)</Note>
                <Note header="2018">World Illustration Awards: Editorial (Shortlisted)</Note>
            </div>
        </InfoBlock>
    </Container>
    <Container>
        <InfoBlock header="Representation">
            <p>Synergy Art</p>
            <p class="mb-2">(Worldwide)</p>
            <p><a href="https://synergyart.co.uk/artists/tommy-parker" target="_blank">synergyart.co.uk</a></p>
            <p><Mail email="luke@synergyart.co.uk" subject="Working with Tommy Parker ✏️"/></p>
            <p><a href="tel:+442077204222">+44 (0)20 7720 4222</a></p>
        </InfoBlock>
    </Container>
	<Clients/>
</Layout>